<section class="w3l-wecome-content-6">

    @if (Model != null && Model.ListProductModels != null)
    {
        @foreach (var item in Model.ListProductModels)
        {
            <div class="container py-lg-5">
                <div class="welcome-grids row">
                    <div class="col-lg-6 welcome-image">
                        <a  asp-controller="ECommerce" asp-action="Orderproduct" asp-route-ProductId="@item.ProductId" >
                            <img src="~/Images/@item.Image" width="400" height="480" />
                        </a>
                    </div>
                    <div class="col-lg-6 mb-lg-0 mb-5">
                        <a  asp-controller="ECommerce" asp-action="Orderproduct" asp-route-ProductId="@item.ProductId" >
                            <asp:placeholder id="placeholder1" runat="server" />
                            <p class="hny-title">
                                <h1>@item.Brand &nbsp;@item.Model</h1>
                                <h3 style="color:black;text-align:right">&#x20b9;@item.Price</h3>
                                <h6 style="color:green;text-align:right">@item.Discount &#x25;off</h6>
                            </p>
                        </a>
                        <div class="Star" style="text-align:center;width:40px;height:22px;">
                            @item.Rating &#9734;
                        </div>
                        <p>
                            <ul>
                                <li>@item.Specification</li>
                                <li>@item.Colour</li>
                                <li>@item.Storage</li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        }
    }

</section>
